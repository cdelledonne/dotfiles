[push]
	default = simple
[core]
	excludesfile = ~/.gitignore_global
[credential]
	helper = /usr/share/git/credential/gnome-keyring/git-credential-gnome-keyring
[diff]
	tool = vimdiff3
[difftool "vimdiff3"]
	path = nvim
[merge]
	tool = vimdiff3
[mergetool "vimdiff3"]
	path = nvim
