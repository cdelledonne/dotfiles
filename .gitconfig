[push]
	default = simple
[core]
	excludesfile = ~/.gitignore_global
[credential]
        helper = /usr/share/doc/git/contrib/credential/libsecret/git-credential-libsecret
[diff]
	tool = vimdiff3
[difftool "vimdiff3"]
	path = nvim
[merge]
	tool = vimdiff3
[mergetool "vimdiff3"]
	path = nvim
